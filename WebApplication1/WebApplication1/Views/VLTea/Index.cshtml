@model IEnumerable<WebApplication1.Models.BubleTea>

@{
    ViewBag.Title = "Index";
}

<h2>VL Tea - The Third Place</h2>

<p>
    <a href="@Url.Action("Create")">Thêm mới</a>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Topping)
        </th>
        <th></th>
