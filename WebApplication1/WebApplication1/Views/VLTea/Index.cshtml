@foreach (var item in Model) {
    <tr>
        <td>
            <mark>@item.Name</mark>
            @*@Html.DisplayFor(modelItem => item.Name)*@
        </td>
        <td>
            <mark>@item.Price.ToString("N0")</mark>
            @*@Html.DisplayFor(modelItem => item.Price)*@
