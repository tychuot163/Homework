@model IEnumerable<HomeWork.Models.BubleTea>

@{
    ViewBag.Title = "Index";
}

<h2>Thông tin</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
          Tên trà sữa
        </th>
        <th>
          Giá
        </th>
        <th>
          Topping
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Topping)
        </td>
